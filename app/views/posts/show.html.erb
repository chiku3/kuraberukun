<div>
    <h1>くらべた結果</h1>
</div>

<div>
    <% @item.each do |item| %>
      <%= image_tag item.image_id, size: '320x240' %>
      <%= link_to item.name, item_path(item) %>

      <% if item.weight / @post.weight >= 1 %>
          <%= (item.weight / @post.weight).round(1) %>
      <% else %>
          <%= (@post.weight / item.weight).round(1) %>
      <% end %>

    <% end %>
</div>

    <%= @post.weight %>

<div>
    <%= link_to "もう一度", post_path(@post), method: :delete %>
    <%= link_to "くらべる一覧", items_path %>
</div>